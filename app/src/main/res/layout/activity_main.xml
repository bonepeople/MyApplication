<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CoordinatorLayout + AppBarLayout + CollapsingToolbarLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试长按时间时更新界面导致的卡顿现象"
        app:layout_constraintTop_toBottomOf="@id/button_appbar" />

    <Button
        android:id="@+id/button_wakeup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="阿里云播放器测试"
        app:layout_constraintTop_toBottomOf="@id/button_click" />

    <Button
        android:id="@+id/button_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试ViewPager逻辑"
        app:layout_constraintTop_toBottomOf="@id/button_wakeup" />

    <Button
        android:id="@+id/button_drawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试动态绘制图形的样式"
        app:layout_constraintTop_toBottomOf="@id/button_viewpager" />

    <Button
        android:id="@+id/button_viewGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义容器控件"
        app:layout_constraintTop_toBottomOf="@id/button_drawable" />

    <Button
        android:id="@+id/button_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecyclerView测试"
        app:layout_constraintTop_toBottomOf="@id/button_viewGroup" />

    <Button
        android:id="@+id/button_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试Dialog样式"
        app:layout_constraintTop_toBottomOf="@id/button_recycler" />

    <Button
        android:id="@+id/button_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试阿里云短视频SDK"
        app:layout_constraintTop_toBottomOf="@id/button_dialog" />
</android.support.constraint.ConstraintLayout>